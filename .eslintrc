{
  "parser": 'babel-eslint',
  "env": {
      "browser": true,
      "node": true,
  },
  "plugins": [
    "react",
  ],
  "extends": "airbnb",
  "rules": {
    "no-tabs": 0,
    "no-plusplus": 0,
    "new-cap": ["error", { "capIsNew": false }],
    "indent": [2, "tab"],
    "class-methods-use-this": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-indent": [2, "tab"],
    "react/jsx-indent-props": [2, "tab"],
    "react/prop-types": 0,
    "react/no-did-mount-set-state": 1,
    "react/sort-comp": [2, {
      order: [
        'static-methods',
        'lifecycle',
        'everything-else',
        'render',
      ],
      groups: {
        lifecycle: [
          'displayName',
          'propTypes',
          'contextTypes',
          'childContextTypes',
          'mixins',
          'statics',
          'defaultProps',
          'constructor',
          'getDefaultProps',
          'getInitialState',
          'state',
          'getChildContext',
          'componentWillMount',
          'componentDidMount',
          'componentWillUnmount',
          'componentWillReceiveProps',
          'shouldComponentUpdate',
          'componentWillUpdate',
          'componentDidUpdate',
        ]
      }
    }]
  }
}
